<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<default>
		<reference name="head">
			<!-- Add Customized CSS -->
			<action method="addCSS"><stylesheet>css/custom.css</stylesheet></action>
		</reference>
	</default>
	<catalog_product_view>
        <reference name="content">
            <reference name="product.info">
				<!-- Add Cool Stuff Block to PDP Page -->
				<block type="catalog/product_view" name="cool.stuff" as="coolStuff" template="catalog/product/view/coolstuff.phtml" />
			</reference>
		</reference>
	</catalog_product_view>

	<catalog_category_view>
		<remove name="right" />
	</catalog_category_view>
		
</layout>